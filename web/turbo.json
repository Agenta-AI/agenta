{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": [
                "$TURBO_DEFAULT$",
                "!**/*.md",
                "!**/*.test.ts",
                "!**/*.test.tsx",
                "!**/*.spec.ts",
                "!**/*.spec.tsx"
            ],
            "outputs": [".next/**", "!.next/cache/**"],
            "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "inputs": [
                "$TURBO_DEFAULT$",
                "**/*.ts",
                "**/*.tsx",
                "**/*.js",
                "**/*.jsx",
                ".eslintrc*",
                "eslint.config.*"
            ],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"],
            "cache": false
        },
        "types:check": {
            "dependsOn": ["^types:check"],
            "inputs": [
                "$TURBO_DEFAULT$",
                "**/*.ts",
                "**/*.tsx",
                "tsconfig.json"
            ],
            "outputs": []
        },
        "@agenta/shared#build": {
            "inputs": ["src/**", "tsconfig.json", "../tsconfig.base.json"],
            "outputs": [".tsbuildinfo"]
        },
        "@agenta/ui#build": {
            "inputs": ["src/**", "tsconfig.json", "../tsconfig.base.json"],
            "outputs": [".tsbuildinfo"]
        },
        "@agenta/entities#build": {
            "dependsOn": ["@agenta/shared#build", "@agenta/ui#build"],
            "inputs": ["src/**", "tsconfig.json", "../tsconfig.base.json"],
            "outputs": [".tsbuildinfo"]
        },
        "@agenta/oss#build": {
            "dependsOn": [
                "@agenta/shared#build",
                "@agenta/ui#build",
                "@agenta/entities#build"
            ],
            "inputs": [
                "src/**",
                "public/**",
                "next.config.ts",
                "tailwind.config.ts",
                "postcss.config.mjs",
                "tsconfig.json"
            ],
            "outputs": [".next/**", "!.next/cache/**"],
            "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
        },
        "@agenta/ee#build": {
            "dependsOn": [
                "@agenta/oss#build",
                "@agenta/shared#build",
                "@agenta/ui#build",
                "@agenta/entities#build"
            ],
            "inputs": [
                "src/**",
                "public/**",
                "next.config.ts",
                "tailwind.config.ts",
                "postcss.config.mjs",
                "tsconfig.json"
            ],
            "outputs": [".next/**", "!.next/cache/**"],
            "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
        },
        "@agenta/shared#lint": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx"],
            "outputs": []
        },
        "@agenta/ui#lint": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx"],
            "outputs": []
        },
        "@agenta/entities#lint": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx"],
            "outputs": []
        },
        "@agenta/oss#lint": {
            "dependsOn": [
                "@agenta/shared#lint",
                "@agenta/ui#lint",
                "@agenta/entities#lint"
            ],
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                ".eslintrc*",
                "eslint.config.*"
            ],
            "outputs": []
        },
        "@agenta/ee#lint": {
            "dependsOn": ["@agenta/oss#lint"],
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                ".eslintrc*",
                "eslint.config.*"
            ],
            "outputs": []
        },
        "@agenta/shared#types:check": {
            "inputs": ["src/**", "tsconfig.json", "../tsconfig.base.json"],
            "outputs": []
        },
        "@agenta/ui#types:check": {
            "inputs": ["src/**", "tsconfig.json", "../tsconfig.base.json"],
            "outputs": []
        },
        "@agenta/entities#types:check": {
            "dependsOn": ["@agenta/shared#types:check", "@agenta/ui#types:check"],
            "inputs": ["src/**", "tsconfig.json", "../tsconfig.base.json"],
            "outputs": []
        },
        "@agenta/oss#types:check": {
            "dependsOn": [
                "@agenta/shared#types:check",
                "@agenta/ui#types:check",
                "@agenta/entities#types:check"
            ],
            "inputs": [
                "src/**",
                "next.config.ts",
                "tsconfig.json"
            ],
            "outputs": []
        },
        "@agenta/ee#types:check": {
            "dependsOn": ["@agenta/oss#types:check"],
            "inputs": [
                "src/**",
                "next.config.ts",
                "tsconfig.json"
            ],
            "outputs": []
        }
    },
    "globalDependencies": ["tsconfig.json", "package.json", "pnpm-lock.yaml"],
    "globalEnv": ["CI", "NODE_ENV"]
}
