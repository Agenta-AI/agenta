# @name query_traces_for_specific_session
# Manually specify a session_id
POST {{host}}/api/tracing/spans/query
Content-Type: application/json
Authorization: {{api_key}}

{
    "filter": {
        "conditions": [
            {
                "field": "attributes",
                "key": "ag.user.id",
